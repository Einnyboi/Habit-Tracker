<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consistify - Habit Tracker</title>
    <link rel="stylesheet" href="/css/style_main.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <h1 class="header-title">Consistify</h1>
            <div class="user-icon">U</div>
            <!-- Login Modal -->
            <div class="modal" id="userModal" role="dialog" aria-labelledby="userModalLabel" aria-hidden="true" style="display:none;">
                <div class="modal-content">
                    <span class="close-button" id="closeUserModal" aria-label="Close Login Modal">&times;</span>
                    <h2 id="userModalLabel">Profile</h2>
                    <button class="btn btn-primary" id="userBtn" aria-label="Sign In">Profile</button>
                    <div class="user-options">
                        <p><a href="/auth/logout" id="logoutlink" aria-label="Log Out">Logout</a></p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="content">
            <button class="add-habit-btn" id="show-add-form">
                <span>+</span> Add New Habit
            </button>
            
            <!-- Inline Add Habit Form -->
            <div class="add-habit-form" id="add-habit-form">
                <div class="form-group">
                    <label for="habit-name">Habit Name</label>
                    <input type="text" id="habit-name" placeholder="e.g. Drink water">
                </div>
                <div class="form-group">
                    <label for="habit-frequency">Frequency</label>
                    <select id="habit-frequency">
                        <option value="daily">Daily</option>
                        <option value="weekly">Weekly</option>
                        <option value="monthly">Monthly</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="habit-target">Target Count</label>
                    <input type="number" id="habit-target" value="1" min="1">
                </div>
                <div class="form-actions">
                    <button class="form-btn cancel-btn" id="cancel-add">Cancel</button>
                    <button type="button" class="form-btn submit-btn" id="submit-habit">Add Habit</button>
                </div>
            </div>

            <!-- Habit List -->
            <div id="habits-container">
                <div class="empty-state">No habits yet. Add your first habit!</div>
            </div>
        </div>
    </div>
    

    <script src="/js/script.js"></script>
</body>
</html>
